<odoo>
    <record id="view_form_real_estate_expense" model="ir.ui.view">
        <field name="name">real.estate.expense.form</field>
        <field name="model">real.estate.expense</field>
        <field name="arch" type="xml">
            <form string="مصروف عقاري">
                <sheet>
                    <notebook>
                        <page string="تفاصيل المصروف">
                            <group>
                                <field name="property_id" required="1"/>
                                <field name="date" required="1"/>
                                <field name="description" required="1"/>
                                <field name="amount" required="1"/>
                                <field name="expense_type"/>
                                <field name="paid"/>
                                <field name="payment_date"/>
                                <field name="invoice_id"/>
                                <field name="active"/>
                                <field name="expense_number" required="1"/>
                                <field name="expense_invoice_id"/>
                            </group>
                        </page>
                        <page string="ملاحظات">
                            <group>
                                <field name="notes"/>
                            </group>
                        </page>
                        <page string="المرفقات">
                            <group>
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
