<odoo>
    <record id="view_real_estate_rental_contract_list" model="ir.ui.view">
        <field name="name">real.estate.rental.contract.list</field>
        <field name="model">real.estate.rental.contract</field>
        <field name="arch" type="xml">
            <list>
                <field name="asset_id"/>
                <field name="tenant_name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="rent_amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_real_estate_rental_contract_form" model="ir.ui.view">
        <field name="name">real.estate.rental.contract.form</field>
        <field name="model">real.estate.rental.contract</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="asset_id"/>
                        <field name="tenant_name"/>
                        <field name="tenant_phone"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="rent_amount"/>
                        <field name="state"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_real_estate_rental_contract" model="ir.actions.act_window">
        <field name="name">عقود الإيجار</field>
        <field name="res_model">real.estate.rental.contract</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_real_estate_rental_contract_list"/>
    </record>

    <menuitem id="menu_real_estate_rental_contract"
              name="عقود الإيجار"
              parent="menu_real_estate_root"
              action="action_real_estate_rental_contract"
              sequence="4"/>
</odoo>
