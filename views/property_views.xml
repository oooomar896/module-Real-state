<odoo>
    <!-- Form View -->
    <record id="view_form_real_estate_property" model="ir.ui.view">
        <field name="name">real.estate.property.form</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <form string="عقار">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="type"/>
                        <field name="state"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="address"/>
                        <field name="area"/>
                        <field name="floor"/>
                        <field name="building"/>
                        <field name="project"/>
                        <field name="owner_id"/>
                    </group>
                    <group>
                        <field name="latitude"/>
                        <field name="longitude"/>
                    </group>
                    <group string="بيانات إضافية">
                        <field name="license_number"/>
                        <field name="purchase_date"/>
                        <field name="property_value"/>
                        <field name="finishing_status"/>
                        <field name="usage_type"/>
                        <field name="service_notes"/>
                    </group>
                    <group>
                        <field name="image" widget="image" class="oe_avatar" options="{'size': [256, 256]}"/>
                    </group>
                    <group string="إحصائيات العقار">
                        <field name="total_units"/>
                        <field name="available_unit_count" readonly="1"/>
                        <field name="occupancy_rate" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="الوحدات (شقق/مكاتب)">
                            <field name="unit_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="unit_type"/>
                                    <field name="floor"/>
                                    <field name="active"/>
                                </list>
                                <form>
                                    <group>
                                        <field name="name" required="1"/>
                                        <field name="unit_type" required="1"/>
                                        <field name="floor"/>
                                        <field name="active"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="ملاحظات">
                            <field name="description"/>
                        </page>
                        <page string="المرفقات">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                        <page string="العقود">
                            <field name="contract_ids"/>
                        </page>
                        <page string="المصروفات">
                            <field name="expense_ids"/>
                        </page>
                        <page string="طلبات الصيانة">
                            <field name="maintenance_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_list_real_estate_property" model="ir.ui.view">
        <field name="name">real.estate.property.list</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <list string="العقارات">
                <field name="name"/>
                <field name="code"/>
                <field name="type"/>
                <field name="state"/>
                <field name="owner_id"/>
                <field name="area"/>
                <field name="city"/>
                <field name="address"/>
                <field name="finishing_status"/>
                <field name="usage_type"/>
                <field name="property_value"/>
                <field name="total_units"/>
                <field name="available_unit_count"/> <!-- عدد الوحدات المتوفرة -->
                <field name="occupancy_rate"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_real_estate_property" model="ir.actions.act_window">
        <field name="name">العقارات</field>
        <field name="res_model">real.estate.property</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_list_real_estate_property"/>
    </record>

    <!-- Menu -->
    <menuitem id="menu_real_estate_property_root" name="العقارات" sequence="1"/>
    <menuitem id="menu_real_estate_property" name="إدارة العقارات" parent="menu_real_estate_property_root" action="action_real_estate_property"/>
</odoo>
