<odoo>
    <record id="view_real_estate_owner_list" model="ir.ui.view">
        <field name="name">real.estate.owner.list</field>
        <field name="model">real.estate.owner</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <record id="view_real_estate_owner_form" model="ir.ui.view">
        <field name="name">real.estate.owner.form</field>
        <field name="model">real.estate.owner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="address"/>
                    </group>
                    <notebook>
                        <page string="العقارات">
                            <field name="assets_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="property_type"/>
                                    <field name="status"/>
                                    <field name="price"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_real_estate_owner" model="ir.actions.act_window">
        <field name="name">المُلاك</field>
        <field name="res_model">real.estate.owner</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_real_estate_owner_list"/>
    </record>
</odoo>
