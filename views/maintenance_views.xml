<odoo>
    <record id="view_form_real_estate_maintenance" model="ir.ui.view">
        <field name="name">real.estate.maintenance.form</field>
        <field name="model">real.estate.maintenance</field>
        <field name="arch" type="xml">
            <form string="طلب صيانة عقاري">
                <sheet>
                    <notebook>
                        <page string="تفاصيل الطلب">
                            <group>
                                <field name="property_id" required="1"/>
                                <field name="request_date" required="1"/>
                                <field name="request_number" required="1"/>
                                <field name="description" required="1"/>
                                <field name="assigned_to"/>
                                <field name="state"/>
                                <field name="cost"/>
                                <field name="completion_date"/>
                                <field name="active"/>
                            </group>
                        </page>
                        <page string="ملاحظات">
                            <group>
                                <field name="notes"/>
                            </group>
                        </page>
                        <page string="المرفقات">
                            <group>
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
